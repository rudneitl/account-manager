  </div>

  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.date_select :due_date %>
  </div>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.select(:status, Expense.statuses, {prompt: true}) %>
  </div>

